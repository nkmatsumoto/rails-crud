<div class="m-3">
  <h1>Restaurant <%= @restaurant.name %></h1>

  <p>Location: <%= @restaurant.address %></p>
  <p>Rating: <%= "⭐️" * @restaurant.rating %></p>

  <!-- app/views/restaurants/show.html.erb -->
  <%= link_to "Edit", restaurant_edit_path(@restaurant), class:"text-decoration-none m-2" %>

  <%= link_to "Delete",
    restaurant_path(@restaurant),
    class:"text-decoration-none m-2 btn btn-light",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>

  <%= link_to "Back to all restaurants", restaurants_path, class:"text-decoration-none m-2" %>



</div>
